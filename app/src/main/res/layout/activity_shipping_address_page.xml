<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgyid"
    tools:context="ShippingAddressPageActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/custom_appbar" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Checkout"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@id/app_bar"
        android:padding="16dp"
        android:textSize="20dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="6dp"
                    android:id="@+id/summary"
                    android:layout_marginTop="6dp"
                    android:text="Order Summery"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18dp" />



                <View
                    android:id="@+id/v15"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/summary"
                    android:layout_marginTop="40dp"
                    android:background="#20282C" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_below="@id/summary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ordersummeryrecyler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <TextView
                    android:id="@+id/total_price_text_view1"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="300dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="170dp"
                    android:text="Total Price : "/>
                <TextView
                    android:id="@+id/total_price_text_view"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="300dp"
                    android:gravity="center"
                    android:background="@drawable/button_border1"
                    android:layout_marginLeft="260dp"
                    android:text="Total Price : "/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"

                android:layout_height="550dp"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/r1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/add"
                        android:layout_marginTop="5dp"
                        android:text="Shipping Address"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp" />
                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/add"
                        android:layout_marginTop="0dp"
                        android:background="#20282C" />


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/add"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/button_border"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/name"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/button_border"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/address"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/button_border"
                        android:hint="City"
                        android:inputType="textPersonName"
                        android:maxLength="10"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/postalcode"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/city"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/button_border"
                        android:hint="Postal Code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/postalcode"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/button_border"
                        android:hint="Phone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="18dp" />
                    <View
                        android:id="@+id/v6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/phone"
                        android:layout_marginTop="10dp"
                        android:background="#20282C" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/tv1"
                        android:layout_below="@+id/phone"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginTop="6dp"
                        android:text="Payment Method"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp" />
                    <View
                        android:id="@+id/v7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="0dp"
                        android:background="#20282C" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv1"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/cashondelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="6dp"
                            android:src="@drawable/cash_on_delivery"
                            android:tag="Cash On Delivery" />

                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnorderplaced"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/sky"
                android:text="Place An Order"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>