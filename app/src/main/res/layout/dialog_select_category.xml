<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/adminbackground"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Please Select Category"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/painter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_shape"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="12dp"
                android:text="Painter"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_shape"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="12dp"
                android:text="Student"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_shape"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:padding="12dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Business"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/architecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_shape"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:padding="12dp"
                android:text="Architecture"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/designer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_shape"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:padding="12dp"
                android:text="Designer"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_shape"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:padding="12dp"
                android:text="Gift Items"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/bg_shape"
                android:backgroundTint="@color/sky"
                android:gravity="start"
                android:padding="12dp"
                android:text="Other"
                android:textColor="@color/black" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>