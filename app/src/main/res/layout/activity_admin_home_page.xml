<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/adminbackground"
    android:layout_height="match_parent"
    tools:context=".AdminHomePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view1">
        <TextView
            android:id="@+id/tvadmindash"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#B2E3FA"
            android:gravity="center"
            android:text="Admin Dashboard"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/row"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvadmindash">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/admin1"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="60dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#CAE7F4"
                app:cardElevation="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_border">
                    <ImageView
                        android:id="@+id/imgreview"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/user_review" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="Review"
                        android:layout_below="@id/imgreview1"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/review"
                        android:onClick="tv1"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="40dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:text="|\n|\n|\n|\n|\n|\n|\n|\n|\n|"
                        android:layout_toRightOf="@+id/review"
                        android:textColor="#136988"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="9dp"/>


                    <ImageView
                        android:id="@+id/imgreview1"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="68dp"
                        android:layout_toRightOf="@id/imgreview"
                        android:src="@drawable/orderrr" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="Order"
                        android:layout_below="@id/imgreview"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:onClick="tv2"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="240dp"/>
                </RelativeLayout>




            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:backgroundTint="#CAE7F4"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                app:cardElevation="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_border">
                    <ImageView
                        android:id="@+id/imgproduct"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/view_product" />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="Manage Product"
                        android:layout_below="@id/imguser"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/view_product"
                        android:onClick="tv3"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:text="|\n|\n|\n|\n|\n|\n|\n|\n|\n|"
                        android:layout_toRightOf="@+id/view_product"
                        android:textColor="#136988"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        />


                    <ImageView
                        android:id="@+id/imguser"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="68dp"
                        android:layout_toRightOf="@id/imgproduct"
                        android:src="@drawable/userrrr" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="Users"
                        android:layout_below="@id/imgproduct"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:onClick="tv4"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="240dp"/>
                </RelativeLayout>




            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv4"
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:backgroundTint="#CAE7F4"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                app:cardElevation="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_border">
                    <ImageView
                        android:id="@+id/imagerating"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="125dp"
                        android:src="@drawable/about" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="Rating"
                        android:layout_below="@id/imagerating"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/rating"
                        android:layout_marginTop="4dp"
                        android:onClick="tv7"
                        android:layout_marginLeft="150dp"/>




                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row2">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:backgroundTint="#CAE7F4"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                app:cardElevation="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_border">
                    <ImageView
                        android:id="@+id/imgabotus"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/about" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="AboutUs"
                        android:layout_below="@id/profile"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/aboutus"
                        android:layout_marginTop="4dp"
                        android:onClick="tv5"
                        android:layout_marginLeft="40dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:text="|\n|\n|\n|\n|\n|\n|\n|\n|\n|"
                        android:layout_toRightOf="@+id/aboutus"
                        android:textColor="#136988"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>


                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="68dp"
                        android:layout_toRightOf="@id/imgabotus"
                        android:src="@drawable/profile1" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="13dp"
                        android:text="Profile"
                        android:layout_below="@id/imgabotus"
                        android:textColor="@color/black"
                        android:background="@drawable/button_border"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:onClick="tv6"
                        android:layout_marginLeft="240dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>