<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_to_cart"
    android:background="@drawable/bgyid">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#B2E3FA"
        android:gravity="center"
        android:text="cart History"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_below="@id/title"
        android:id="@+id/rv">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="650dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userorderrecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="6dp" />
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cartviewc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/rv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <!-- Item Count TextView -->
            <TextView
                android:id="@+id/itemCountTextView"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="1 item"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/black" />

            <!-- Total Price TextView -->
            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Total â‚¹ 0"
                android:textColor="@android:color/black"
                android:layout_marginLeft="190dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/itemCountTextView"/>

            <!-- Checkout Button -->
            <Button
                android:id="@+id/btncheckout"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:onClick="checkout"
                android:backgroundTint="@color/sky"
                android:text="Checkout"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_below="@id/totalPriceTextView"
                android:layout_marginLeft="24dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
