<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/bk2"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/im1"
            android:src="@drawable/adminprofile2"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATIONARY SHOP"
            android:layout_below="@+id/im1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/tv1"
            android:layout_marginLeft="70dp"
            android:textColor="@color/black"/>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/darkblue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SkyBlue Stationary"
            android:layout_below="@+id/v1"
            android:textSize="27dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tv2"/>

    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rv1"
        android:layout_marginTop="10dp"
        android:background="@color/darkblue" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_marginTop="20dp"
        android:id="@+id/rv2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  123-356-1547|000-987-8546"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:drawableLeft="@drawable/phone"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tv11"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  skyblueemailhere@gmail.com"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="55dp"
            android:drawableLeft="@drawable/email"
            android:gravity="center"
            android:layout_below="@id/tv11"
            android:textStyle="bold"
            android:id="@+id/tv12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv12"
            android:id="@+id/l1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:onClick="location"
                android:src="@drawable/location"/>
            <TextView
                android:id="@+id/tvaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="   G/50,Sns Platina,Vesu Main Road,opp.Shreik Residency,Srat,Gujarat 395007."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.yourwebsite.com"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="95dp"
            android:gravity="center"
            android:layout_below="@id/l1"
            android:textStyle="bold"
            android:id="@+id/tv13"/>
    </RelativeLayout>

</RelativeLayout>