<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgyid"
    tools:context=".Forget_password_otp_page">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/new_pass" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/im1"
        android:text="Please Enter The 4 Digit Code.\nTap To Doubal Click In OTP Box."
        android:textColor="#136988"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font2"
        android:text="Verify Your Email"
        android:textAlignment="center"
        android:textColor="#136988"
        android:textSize="35sp"
        android:textStyle="bold" />



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="400dp"
            android:padding="6dp">

            <EditText
                android:id="@+id/etc1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext3"
                android:layout_below="@+id/login"
                android:padding="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                />
            <EditText
                android:id="@+id/etc2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext3"
                android:padding="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <EditText
                android:id="@+id/etc3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext3"
                android:padding="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <EditText
                android:id="@+id/etc4"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext3"
                android:padding="12dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/btncontinuefc"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/font2"
        android:padding="20dp"
        android:text="Verify"
        android:backgroundTint="#2285A8"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="signin"/>




</RelativeLayout>
